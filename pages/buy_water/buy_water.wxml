<!-- 图片滚动View -->
<view style="margin:10px;">
	<swiper class="swiper" autoplay="true" interval="2000">
		<swiper-item>
			<image src="../../images/header1.jpg"></image>
		</swiper-item>
		<swiper-item>
			<image src="../../images/header2.jpg"></image>
		</swiper-item>
		<swiper-item>
			<image src="../../images/header3.jpg"></image>
		</swiper-item>
		<swiper-item>
			<image src="../../images/header4.jpg"></image>
		</swiper-item>
	</swiper>
</view>

<!-- 系统滚动公告 -->
<i-notice-bar wx:if="{{notification}}" icon="systemprompt" loop>
    {{notification}}
</i-notice-bar>

<!-- 订水信息表单 -->
<view>
	<i-row>
		<i-col span="24" i-class="col-class">
			<i-input bind:change="change_address" value="{{address}}" type="textarea" title="详细地址：" placeholder="请输入详细地址(最多50字)" maxlength="50" />
		</i-col>
	</i-row>
	<i-row>
		<i-col span="24" i-class="col-class">
			<i-input bind:change="change_mobile" value="{{ mobile }}" maxlength="11" type="number" title="联系电话：" placeholder="请输入手机号" />
		</i-col>
	</i-row>
	<i-row>
		<i-col span="24" i-class="col-class">
			<view class="section">
				<picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
					<view class="picker">
						<i-input bind:change="change_time" value="{{time}}" title="配送时间：" placeholder="点击选择时间" disabled />
					</view>
				</picker>
			</view>
		</i-col>
	</i-row>
	<view>
		<button class="btn1" bindtap="on_send">
			<image class='btnImg' src='../../images/send_water.png'></image>
			<view>立即配送</view>
		</button>
	</view>
</view>

<!-- 底部工具栏View -->
<view>
	<i-tab-bar fixed="true" current="{{ current }}" color="#f759ab" bindchange="handleChange">
		<i-tab-bar-item key="buy_water" icon="homepage" current-icon="homepage_fill" title="订水"></i-tab-bar-item>
		<i-tab-bar-item key="order_water" icon="group" current-icon="group_fill" title="订单"></i-tab-bar-item>
		<i-tab-bar-item key="remind" icon="remind" current-icon="remind_fill" title="通知"></i-tab-bar-item>
		<!-- <i-tab-bar-item key="mine" icon="mine" current-icon="mine_fill" title="我的"></i-tab-bar-item> -->
	</i-tab-bar>
</view>