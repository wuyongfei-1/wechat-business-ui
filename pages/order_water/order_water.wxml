<view wx:if="{{orderArray.length == 0}}" style="margin-top:10px;width:100%;height:100%;text-align:center;">
	<image style='width:30%;height:30%' class="infoImage" src="../../images/order_not_found.png" mode='widthFix'>
	</image>
	<view>
		<text style="text-align:center;margin-top:15px;">暂无订单！</text>
	</view>
</view>
<view wx:for="{{orderArray}}" style="margin-top:10px">
	<i-card title="自来桶装水" extra="{{!item.isArrived ? '正在配送':'已送达'}}" thumb="https://bkimg.cdn.bcebos.com/pic/203fb80e7bec54e722e34457b8389b504fc26a6f?x-bce-process=image/watermark,g_7,image_d2F0ZXIvYmFpa2UyMjA=,xp_5,yp_5">
		<view slot="content">
			<i-notice-bar icon="systemprompt" loop speed="1200">
				手机号：{{item.mobile}} 于 {{item.createdOn}} 订购一桶水，送达 {{item.toAddress}}
			</i-notice-bar>
		</view>
		<view wx:if="{{!item.isArrived}}" slot="footer"><label style="color:red">订单正在配送中，请稍后...</label></view>
		<view wx:else slot="footer"><label style="color:green">于 {{item.arrivedDateTime}} 送达指定位置！</label></view>
	</i-card>
</view>
